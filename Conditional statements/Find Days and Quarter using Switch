#include <stdio.h>

int main()
{
    int month;

    printf("Enter a month (1-12): ");
    scanf("%d", &month);

    // Days in month
    switch(month)
    {
        case 1:
        case 3:
        case 5:
        case 7:
        case 8:
        case 10:
        case 12:
            printf("Days: 31\n");
            break;

        case 4:
        case 6:
        case 9:
        case 11:
            printf("Days: 30\n");
            break;

        case 2:
            printf("Days: 28 or 29 (Leap Year)\n");
            break;

        default:
            printf("Invalid Month\n");
    }

    // Quarter
    switch(month)
    {
        case 1:
        case 2:
        case 3:
            printf("Quarter: Q1\n");
            break;

        case 4:
        case 5:
        case 6:
            printf("Quarter: Q2\n");
            break;

        case 7:
        case 8:
        case 9:
            printf("Quarter: Q3\n");
            break;

        case 10:
        case 11:
        case 12:
            printf("Quarter: Q4\n");
            break;
    }

    return 0;
}
