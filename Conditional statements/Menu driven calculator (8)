#include <stdio.h>

int main() {
    int choice;
    float n1, n2, result;

    printf("--- Menu-Driven Calculator ---\n");
    printf("1. Addition\n2. Subtraction\n3. Multiplication\n4. Division\n");
    printf("Enter your choice (1-4): ");
    scanf("%d", &choice);

    printf("Enter two numbers: ");
    scanf("%f %f", &n1, &n2);

    switch(choice) {
        case 1: result = n1 + n2; printf("Result: %.2f\n", result); break;
        case 2: result = n1 - n2; printf("Result: %.2f\n", result); break;
        case 3: result = n1 * n2; printf("Result: %.2f\n", result); break;
        case 4: 
            if(n2 != 0) {
                result = n1 / n2; 
                printf("Result: %.2f\n", result);
            } else {
                printf("Error! Division by zero.\n");
            }
            break;
        default: printf("Invalid choice!\n");
    }

    return 0;
}
